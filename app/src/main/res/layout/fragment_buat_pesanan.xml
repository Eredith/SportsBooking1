<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Kategori Olahraga -->
        <Spinner
            android:id="@+id/spinnerKategoriOlahraga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Pilih Olahraga" />

        <!-- Nama Lapangan -->
        <EditText
            android:id="@+id/etNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nama Lapangan"
            android:inputType="textPersonName" />

        <!-- Jenis Lapangan -->
        <EditText
            android:id="@+id/etJenisLapangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Jenis Lapangan"
            android:inputType="text" />

        <!-- Harga Lapangan -->
        <EditText
            android:id="@+id/etHargaLapangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Harga Lapangan"
            android:inputType="numberDecimal"
            android:layout_marginTop="8dp" />

        <!-- Kapasitas Lapangan -->
        <EditText
            android:id="@+id/etKapasitasLapangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Kapasitas Lapangan"
            android:inputType="number"
            android:layout_marginTop="8dp" />

        <!-- Alamat Lapangan -->
        <EditText
            android:id="@+id/etAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Alamat Lapangan"
            android:inputType="textPostalAddress"
            android:layout_marginTop="8dp" />

        <!-- Status Lapangan -->
        <Spinner
            android:id="@+id/spinnerStatusLapangan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <!-- Waktu Mulai -->
        <TextView
            android:id="@+id/tvWaktuMulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu Mulai"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulai: Belum Dipilih"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/bg_textview"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_time"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp" />

        <!-- Waktu Selesai -->
        <TextView
            android:id="@+id/tvWaktuSelesai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu Selesai"
            android:textSize="16sp"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/textEndTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Selesai: Belum Dipilih"
            android:textSize="16sp"
            android:padding="12dp"
            android:background="@drawable/bg_textview"
            android:gravity="center_vertical"
            android:drawableEnd="@drawable/ic_time"
            android:drawablePadding="8dp"
            android:layout_marginTop="8dp" />

        <!-- Gambar Lapangan -->
        <ImageView
            android:id="@+id/imgLapangan"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/venue_image_desc"
            android:src="@drawable/venue_image" />

        <Button
            android:id="@+id/btnPilihGambar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Gambar"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp" />

        <!-- Tombol Simpan Pesanan -->
        <Button
            android:id="@+id/btnSimpanPesanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Simpan Pesanan"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</ScrollView>
