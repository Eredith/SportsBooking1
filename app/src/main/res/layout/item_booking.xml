<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Image of the venue -->
        <ImageView
            android:id="@+id/image_venue"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_venue_placeholder" />

        <!-- Booking details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:id="@+id/sportsCenter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports Center Name"
                android:textStyle="bold"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/court"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Court Name"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_booking_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Date"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/tv_booking_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Time Slot"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/bookedBy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booked By"
                android:textColor="@android:color/darker_gray" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Status"
                android:textColor="@android:color/holo_orange_dark"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>