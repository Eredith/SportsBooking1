<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:radius="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Gambar com.example.sportsbooking.Venue.VenueMain -->
        <ImageView
            android:id="@+id/venue_image"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@drawable/venue_image"
            android:layout_gravity="center" />

        <!-- Rating and Total Reviews -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <!-- Star Icons -->
            <ImageView
                android:id="@+id/star_1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/star_2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/star_3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/star_4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_filled" />

            <ImageView
                android:id="@+id/star_5"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/ic_star_filled" />

            <!-- Total Reviews -->
            <TextView
                android:id="@+id/total_reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="(120)"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray" />
        </LinearLayout>

        <!-- Nama com.example.sportsbooking.Venue.VenueMain -->
        <TextView
            android:id="@+id/venue_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ASIOP Stadium"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginTop="8dp" />

        <!-- Harga com.example.sportsbooking.Venue.VenueMain -->
        <TextView
            android:id="@+id/venue_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp. 1.200.000"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="4dp" />

        <!-- Lokasi dan Jenis Olahraga -->
        <TextView
            android:id="@+id/venue_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Jakarta"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/venue_sport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sepak Bola"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray" />
    </LinearLayout>
</androidx.cardview.widget.CardView>
